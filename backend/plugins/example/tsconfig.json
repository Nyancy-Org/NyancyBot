{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "target": "ES2021",
    "outDir": "./dist",
    "baseUrl": "../../",
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
